name: Lancer tests unitaires

on:
  pull_request

jobs:
  build:
    runs-on: windows-latest

    steps:
       # 1. Checkout
      - name: 1. Checkout...
        uses: actions/checkout@v2

      # 2. Set up
      - name: 2. Set up .NET...
        uses : actions/setup-dotnet@v1
        with:
          dotnet-version: 'latest'
      
      # 3. Build
      - name: 3. Build...
        run: dotnet build --configuration Release

      # 4. Unit tests
      - name: 4. Unit tests...
        run: dotnet test
  
